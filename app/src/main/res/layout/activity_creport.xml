<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CreportActivity">

    <Spinner
        android:id="@+id/sp_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp">
    </Spinner>

    <Spinner
        android:id="@+id/sp_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sp_teacher"
        android:layout_margin="20dp">
    </Spinner>

    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="151dp"
        android:layout_height="147dp"
        android:timePickerMode="spinner"
        android:layout_below="@id/sp_teacher"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp">

    </TimePicker>

    <EditText
        android:id="@+id/ET_report"
        android:layout_width="match_parent"
        android:layout_height="484dp"
        android:layout_below="@id/sp_subject">

    </EditText>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ET_report"
        android:layout_marginStart="70dp"
        android:text="@string/cancel"
        >
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ET_report"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:text="@string/accept">

    </Button>


</RelativeLayout>