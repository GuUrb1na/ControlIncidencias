<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.CteacherActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ct_teacherImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true">
    </ImageView>

    <EditText
        android:id="@+id/ct_teacherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ct_teacherImg"
        android:layout_centerHorizontal="true"
        android:text="pelos pelez lopez">
    </EditText>

    <EditText
        android:id="@+id/ct_teacherField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ct_teacherName"
        android:layout_centerHorizontal="true"
        android:text="Turismo">
    </EditText>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_subjects"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ct_teacherField"
        android:layout_centerHorizontal="true">
    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_subjects"
        android:layout_marginStart="70dp"
        android:text="@string/cancel"
        >
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_subjects"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="70dp"
        android:text="@string/accept">

    </Button>


</RelativeLayout>